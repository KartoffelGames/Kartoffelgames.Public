{
    "name": "@kartoffelgames/tools.cli",
    "projectName": "KartoffelGames.Tool.CLI",
    "version": "0.0.1",
    "description": "KartoffelGames.Tool.CLI",
    "author": {
        "name": "KartoffelGames"
    },
    "files": [
        "library/source/**/*"
    ],
    "main": "library/source/index.js",
    "types": "library/source/index.d.ts",
    "devDependencies": {
        "@babel/plugin-transform-async-to-generator": "^7.14.5",
        "@babel/preset-env": "^7.15.6",
        "@types/chai": "^4.2.21",
        "@types/mocha": "^5.2.7",
        "babel-loader": "^8.2.2",
        "chai": "^4.3.4",
        "copyfiles": "^2.4.1",
        "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
        "jsdom": "^19.0.0",
        "jsdom-global": "^3.0.2",
        "mocha": "^9.1.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "raw-loader": "^4.0.2",
        "rimraf": "^3.0.2",
        "ts-loader": "^8.0.9",
        "typescript": "^4.4.2",
        "url-loader": "^4.1.1",
        "webpack": "^5.51.1",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.10.0"
    },
    "scripts": {
        "pre:build:webpack": "webpack-cli --config ../../enviroment/configuration/webpack.config.js",
        "pre:build:clean": "node ../../enviroment/scripts/clean-build.mjs",
        "pre:build:build-tsc": "tsc --project tsconfig.json --noemit false",
        "pre:build:copyRawFiles": "copyfiles -e \"**/*.ts\" source/**/* library/",
        "pre:build": "npm run pre:build:clean && npm run pre:build:copyRawFiles && npm run pre:build:build-tsc",
        "build:debug": "npm run pre:build",
        "build": "npm run pre:build",
        "scratchpad": "webpack serve --config=../../enviroment/configuration/webpack.config.js --env=buildType=scratchpad",
        "test": "npm run pre:build:webpack -- --env=buildType=test && npx mocha --config \"../../enviroment/configuration/mocha.config.js\"",
        "test:debug": "npm run pre:build:webpack -- --env=buildType=test && npx mocha --config \"../../enviroment/configuration/mocha.config.js\" --no-timeouts",
        "test:coverage": "npm run pre:build:webpack -- --env=buildType=test --env=coverage && npx nyc --nycrc-path \"../../enviroment/configuration/nyc.config.json\" mocha --config \"../../enviroment/configuration/mocha.config.js\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KartoffelGames/KartoffelGames.Public.git",
        "directory": "packages/kartoffelgames.tool.cli"
    },
    "bugs": {
        "url": "https://github.com/KartoffelGames/KartoffelGames.Public/issues"
    },
    "homepage": "https://github.com/KartoffelGames/KartoffelGames.Public#readme"
}