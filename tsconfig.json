{
    "compileOnSave": false,
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "build": true,
        "declarationMap": true,
        "composite": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es2021",
        "declaration": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "lib": [
            "ES2021",
            "DOM"
        ],
        "baseUrl": "./",
    },
    "exclude": [
        "**/node_modules/*",
        "node_modules",
        "**/tmp/*",
        "tmp",
        "**/Library/*",
        "Library"
    ],
    "include": [
        "./**/*.ts",
    ],
    "files": [
        "declaration/module-declaration.d.ts"
    ]
}